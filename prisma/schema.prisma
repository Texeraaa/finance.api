// schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          Int          @id @default(autoincrement())
  username    String       @unique
  password    String
  email       String       @unique
  createdAt   DateTime     @default(now())
  incomes     Income[]
  investments Investment[]
  bills       Bill[]
  receivables Receivable[]
}

model Income {
  id     Int      @id @default(autoincrement())
  user   User     @relation(fields: [userId], references: [id])
  userId Int
  amount Float
  source String?
  date   DateTime
}

model Investment {
  id     Int      @id @default(autoincrement())
  user   User     @relation(fields: [userId], references: [id])
  userId Int
  amount Float
  type   String
  date   DateTime
}

model Bill {
  id          Int      @id @default(autoincrement())
  user        User     @relation(fields: [userId], references: [id])
  userId      Int
  amount      Float
  description String?
  dueDate     DateTime
}

model Receivable {
  id      Int      @id @default(autoincrement())
  user    User     @relation(fields: [userId], references: [id])
  userId  Int
  amount  Float
  source  String?
  dueDate DateTime
}
