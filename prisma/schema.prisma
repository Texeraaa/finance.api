// schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String       @id @default(uuid())
  cpf         String       @unique
  username    String
  password    String
  email       String       @unique
  createdAt   DateTime     @default(now())
  incomes     Income[]
  investments Investment[]
  bills       Bill[]
  receivables Receivable[]

  @@map("users")
}

model Income {
  id     String   @id @default(uuid())
  user   User     @relation(fields: [userId], references: [id])
  userId String
  amount Float
  source String?
  date   DateTime

  @@map("incomes")
}

model Investment {
  id     String   @id @default(uuid())
  user   User     @relation(fields: [userId], references: [id])
  userId String
  amount Float
  type   String
  date   DateTime

  @@map("investments")
}

model Bill {
  id          String   @id @default(uuid())
  user        User     @relation(fields: [userId], references: [id])
  userId      String
  amount      Float
  description String?
  dueDate     DateTime

  @@map("bills")
}

model Receivable {
  id      String   @id @default(uuid())
  user    User     @relation(fields: [userId], references: [id])
  userId  String
  amount  Float
  source  String?
  dueDate DateTime

  @@map("receivables")
}
